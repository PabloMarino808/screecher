<p style="color: green"><%= notice %></p>

<% content_for :title, "Screeches" %>

<h1>Screeches</h1>

<table class="table" id="screeches">
  <tbody>
    <% @screeches.each do |screech| %>
    <tr>
      <td>
        <%= screech.username %>
      </td>
      <td>
        <%= screech.description %>
      </td>
      <td>
      <div class="dropdown">
      <div class="btn dropdown-toggle" role="button">
        <i class="fa-solid fa-ellipsis-vertical"></i>
      </div>
      <ul class="dropdown-menu">
        <li>
          <%= link_to screech, class:"dropdown-item" do%>
            <p>Say what?</p>
          <% end %>
        <a class="dropdown-item" href="#">Action</a>
        </li>
      </ul>
      </div>
      </td>
    </tr>

    <% end %>


    
    
  </tbody>
</table>